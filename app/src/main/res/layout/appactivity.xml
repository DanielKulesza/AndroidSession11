<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:padding="10dp"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:id="@+id/buttonContainer"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
	<RelativeLayout
		android:id="@+id/player"
		android:visibility="gone"
		android:layout_marginTop="20dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<android.support.v4.widget.Space
			android:id="@+id/centerView"
			android:layout_centerInParent="true"
			android:layout_width="0dp"
			android:layout_height="0dp"/>
		<ImageButton
			android:id="@+id/playPause"
			android:src="@android:drawable/ic_media_play"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="10dp"
			android:layout_marginTop="20dp"
			android:layout_width="48dp"
			android:layout_height="48dp"/>
		<TextView
			android:id="@+id/time"
			android:textSize="14sp"
			android:text="0:00"
			android:gravity="clip_vertical|end"
			android:layout_below="@id/playPause"
			android:layout_width="60dp"
			android:layout_height="20dp"/>
		<TextView
			android:id="@+id/totalTime"
			android:textSize="14sp"
			android:text="0:00"
			android:gravity="clip_vertical"
			android:layout_below="@id/playPause"
			android:layout_alignParentEnd="true"
			android:layout_width="60dp"
			android:layout_height="20dp"/>
		<SeekBar
			android:id="@+id/seek"
			android:layout_below="@id/playPause"
			android:layout_toEndOf="@id/time"
			android:layout_toStartOf="@id/totalTime"
			android:layout_marginBottom="10dp"
			android:layout_width="match_parent"
			android:layout_height="20dp"/>
		<ImageView
			android:id="@+id/volumeDown"
			android:src="@drawable/volume_low"
			android:layout_below="@id/seek"
			android:layout_toEndOf="@id/centerView"
			android:layout_width="36dp"
			android:layout_height="36dp"/>
		<ImageView
			android:id="@+id/volumeUp"
			android:src="@drawable/volume_high"
			android:layout_below="@id/seek"
			android:layout_alignParentEnd="true"
			android:layout_width="32dp"
			android:layout_height="32dp"/>
		<SeekBar
			android:id="@+id/volume"
			style="@style/Widget.AppCompat.ProgressBar.Horizontal"
			android:layout_toEndOf="@id/volumeDown"
			android:layout_toStartOf="@id/volumeUp"
			android:layout_below="@id/seek"
			android:layout_marginStart="6dp"
			android:layout_marginEnd="6dp"
			android:layout_width="match_parent"
			android:layout_height="36dp"/>
	</RelativeLayout>
</LinearLayout>
